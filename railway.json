{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "cron": [
      {
        "command": "curl -X POST http://0.0.0.0:$PORT/broadcast -H 'Content-Type: application/json' -d '{}'",
        "schedule": "0 23 * * 1,5"
      }
    ],
    "restartPolicyMaxRetries": 10,
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "gunicorn --bind 0.0.0:$PORT app:app"
  }
}