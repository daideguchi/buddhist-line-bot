{
  "$schema": "https://railway.app/railway.schema.json", 
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0:$PORT app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "cron": [
      {
        "schedule": "0 23 * * 1,3,5",
        "command": "curl -X POST http://localhost:$PORT/broadcast -H 'Content-Type: application/json' -d '{}'"
      }
    ]
  }
}